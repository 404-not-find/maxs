<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.projectmaxs.main"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="org.projectmaxs.permission.USE_MODULE"/>

    <permission android:name="org.projectmaxs.permission.USE_MAIN"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application android:label="@string/app_name" android:allowBackup="true">
        <activity android:name=".activities.MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:exported="false" android:name=".MAXSService">
            <intent-filter>
                <action android:name="org.projectmaxs.main.START_SERVICE"/>
                <action android:name="org.projectmaxs.main.STOP_SERVICE"/>
                <action android:name="org.projectmaxs.main.NETWORK_STATUS_CHANGED"/>
            </intent-filter>
        </service>
        <service android:name=".MAXSIntentService"
            android:permission="org.projectmaxs.permission.USE_MAIN">
            <intent-filter>
                <action android:name="org.projectmaxs.main.REGISTER_MODULE"/>
                <action android:name="org.projectmaxs.main.SET_RECENT_CONTACT"/>
                <action android:name="org.projectmaxs.main.UPDATE_XMPP_STATUS"/>
                <action android:name="org.projectmaxs.main.SEND_USER_MESSAGE"/>
            </intent-filter>
        </service>
        <service android:name=".MAXSRemoteService"
            android:permission="org.projectmaxs.permission.USE_MAIN">
            <intent-filter>
                <action android:name="org.projectmaxs.main.BIND_SERVICE"/>
            </intent-filter>
        </service>
        <activity android:name=".activities.AdvancedSettings"></activity>
        <receiver android:name=".receivers.NetworkConnectivityReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
    </application>
</manifest> 
